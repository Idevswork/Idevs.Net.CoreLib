<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <ContentFiles Include="$(MSBuildThisFileDirectory)..\contentFiles\any\any\Content\css\*.css" />
    </ItemGroup>
    <Target Name="CopyContentToProject" BeforeTargets="Build">
        <Message Text="Copying content to project" />
        <Copy SourceFiles="@(ContentFiles)" 
            DestinationFolder="$(ProjectDir0)wwwroot\lib\Idevs\Content\"
        />
    </Target>
    <Target Name="NpmInstall" BeforeTargets="BeforeBuild" Condition="!Exists('node_modules\@idevs\corelib\index.d.ts')">
    <Message Text="Installing NPM packages..." Importance="high" />
    <Exec Command="npm install @idevs/corelib" />
  </Target>
</Project>